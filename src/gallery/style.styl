body
  background: black

#output
  max-width: 1000px
  display: grid
  margin: auto
  justify-content: center
  grid-gap: 32px
  padding: 16px
  grid-template-columns: repeat(auto-fit, minmax(271px, 271px));

  #title
    grid-column: 1 / -1
    color: #F24
    grid-gap: 0px
    h1 a
      color: #FFF
      text-decoration: none
      :hover
        text-decoration: underline
    h2
      color: #F24
    h1, h2
      font-size: 14px
      font-family: monospace
      font-weight: normal
      margin: 0

  a.canvas
    display: flex
    -webkit-tap-highlight-color: #F24;
    canvas
      display flex
      opacity: 0.4
      transition: opacity 0.2s ease-in-out;
      &.active
        opacity: 1
