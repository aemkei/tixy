html
  background-color: black
  color: #FFF
  height: 100%;

*
  box-sizing: border-box

a:link, a:visited
  color: #F24

html, *, input
  font-family: monospace
  font-size: 14px

body
  padding: 0
  margin: 0
  display: grid
  align-items: center;
  justify-items: center;
  height: 100%;

label, input
  display: block

#output
  display: block

#editor
  display: block
  width: 272px;
  line-height: 1.15em

#comment
  color: #F24

#input
  background: none
  color: #FFF
  padding: 0
  margin: 0.15em 0
  border: 0
  width: 100%
  &:focus
    outline: none

#code-runner
  display: none